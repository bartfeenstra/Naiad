{
  "description": "Naiad hardware controller",
  "type": "object",
  "required": ["class"],
  "additionalProperties": false,
  "properties": {
    "class": {
      "description": "The controller's module name and class name, separated by a hash/pound. Example: foo.bar#Baz",
      "type": "string",
      "pattern": "^[^#]+#[^#]+$"
    },
    "configuration": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
